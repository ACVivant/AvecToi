<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUserActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/create_intro_img"
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:src="@drawable/heros3long"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/create_login_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/create_intro_img"
        android:padding="@dimen/default_margin">

        <ImageView
            android:id="@+id/create_face"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_face"
            android:paddingHorizontal="@dimen/default_margin"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/create_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_name"
        android:padding="@dimen/default_margin"
        android:textSize="@dimen/default_title_size"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/create_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:text="@string/create_email"
                android:textColor="@android:color/white"
                android:textSize="@dimen/default_title2_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/create_login_infos"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:id="@+id/create_infos_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorSecondary"
            android:padding="@dimen/default_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_phone_intro"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:paddingEnd="@dimen/default_margin"/>
            <EditText
                android:id="@+id/create_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_phone"
                android:inputType="phone"
                android:gravity="right|end"
                android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_community"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/default_margin"/>
                <Spinner
                    android:id="@+id/create_spinner_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|end" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/create_infos_complete"
            app:layout_constraintStart_toStartOf="parent">


            <Switch
                android:id="@+id/create_switch_dispo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_disponibilty"
                android:paddingHorizontal="@dimen/default_margin"
                android:background="@color/colorSecondary"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_SP"
                android:padding="@dimen/default_margin"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/create_switch_ironing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_ironingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_household"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_householdSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_driving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_driveSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_shoppingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_cooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_cookingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_diy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_diySP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_works"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_worksSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_babysitting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_babysittingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_gardening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_gardeningSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_readingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_companySP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_tutoring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_tutoringSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_removing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_relocationSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Switch
                android:id="@+id/create_switch_sewing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_sewingSP"
                android:paddingHorizontal="@dimen/default_margin"/>

            <Button
                android:id="@+id/create_validate_btn"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/create_validate"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="@dimen/default_margin"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>